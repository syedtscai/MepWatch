# EU MEP Watch Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=5000

# EU Parliament API Configuration (optional - for future API key requirements)
# EU_PARLIAMENT_API_KEY=your_api_key_here

# Session Configuration (for future authentication features)
SESSION_SECRET=your_session_secret_here

# Cache Configuration
CACHE_TTL=300000

# Data Sync Configuration
SYNC_INTERVAL=86400000

# Logging Configuration
LOG_LEVEL=info

# Production Security (for deployment)
# SSL_CERT_PATH=/path/to/ssl/cert
# SSL_KEY_PATH=/path/to/ssl/key